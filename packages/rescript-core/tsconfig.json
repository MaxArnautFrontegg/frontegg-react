{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "isolatedModules": false,
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}

